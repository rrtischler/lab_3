void printOUT(){
    int i;
    for(i=0; i<NX;i++){
        printf("%d ",out[i]);
    }
}

void printFileOUT(){
    FILE *outFile;
    outFile = fopen(FILENAME, "w");
    int i;
    for(i=0; i<NX; i++){
        fprintf(outFile, "%d ", out[i]);
//        printf("%d ", out[i]);
//        printf("%d ", i);
    }
}

void zerarVetores(){
    int i;
    for(i=0; i<NBUFF; i++){
       dbuffer[i] = 0;
   }

   for(i=0; i<NX; i++){
       out[i] = 0;
   }
}
